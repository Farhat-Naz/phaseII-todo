# ============================================
# Frontend Environment Variables
# ============================================
# Copy this file to .env.local and fill in your actual values

# ============================================
# API Configuration
# ============================================

# Backend API URL (where FastAPI server is running)
# For development: http://localhost:8000
# For production: https://your-api-domain.com
NEXT_PUBLIC_API_URL=http://localhost:8000

# ============================================
# Better Auth Configuration
# ============================================

# Secret key for Better Auth (MUST match backend SECRET_KEY)
# Generate with: openssl rand -hex 32
# Minimum 32 characters required for security
BETTER_AUTH_SECRET=your-secret-key-here-generate-a-secure-random-string-min-32-chars

# Base URL where this Next.js app is hosted
# For development: http://localhost:3000
# For production: https://your-frontend-domain.com
BETTER_AUTH_URL=http://localhost:3000

# ============================================
# Application Configuration
# ============================================

# Application name (displayed in UI)
NEXT_PUBLIC_APP_NAME=TodoApp

# Application URL (for sharing, redirects, etc.)
NEXT_PUBLIC_APP_URL=http://localhost:3000

# ============================================
# Optional Configuration
# ============================================

# Enable analytics (optional)
# NEXT_PUBLIC_ANALYTICS_ID=

# Sentry DSN for error tracking (optional)
# NEXT_PUBLIC_SENTRY_DSN=
